server 10.8.255.0 255.255.255.0
verb 3
key pki/private/server.key
ca pki/certs/ca.crt
cert pki/certs/server.crt
dh pki/dh.pem
tls-auth pki/ta.key
key-direction 0
keepalive 10 60
persist-key
persist-tun

proto udp

port 1194
dev tun0
status /tmp/openvpn-status.log

user nobody
group nogroup
push dhcp-option DNS 8.8.8.8
push dhcp-option DNS 8.8.4.4
route 10.8.254.0 255.255.255.0
